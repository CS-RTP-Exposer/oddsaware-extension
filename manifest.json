{
    "manifest_version": 3,
    "name": "CS:GO Gambling RTP Exposer",
    "version": "1.0",
    "permissions": [
        "scripting",
        "activeTab",
        "webNavigation"
    ],
    "host_permissions": [
        "https://www.csgoroll.com/*",
        "https://rain.gg/*",
        "https://csgogem.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.csgoroll.com/*",
                "*://*.rain.gg/*",
                "*://*.csgogem.com/*"
            ],
            "js": [
                "utils.js",
                "content_router_watcher.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "public/oddsaware.svg"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}